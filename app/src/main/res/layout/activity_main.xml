<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/iv_choixHumain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="@string/Choix_Humain" />

    <ImageView
        android:id="@+id/iv_ChoixHumain"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/pierre"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="80dp" />

    <EditText
        android:id="@+id/iv_ChoixOrdinateur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ChoixOrdinateur"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="200dp"
        tools:text="@string/ChoixOrdinateur" />

    <ImageView
        android:id="@+id/iv_ChoixOrdinateur"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/feuille"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="258dp" />

    <EditText
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Score : Humain 0 Ordinateur 0"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="380dp"
        tools:text="@sring/Score" />

    <Button
        android:id="@+id/b_pierre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pierre"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="447dp"
        tools:text="pierre" />

    <Button
        android:id="@+id/b_ciseau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ciseau"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="446dp"
        tools:text="ciseau" />

    <Button
        android:id="@+id/b_feuille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="feuille"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="447dp"
        tools:text="feuille" />
</android.support.constraint.ConstraintLayout>